<style>
    /* Floating Elements Animation */
    .floating-elements {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
        opacity: 0.1;
    }

    .float-item {
        position: absolute;
        font-size: 2rem;
        font-weight: bold;
        color: #5eead4;
        animation: float 6s ease-in-out infinite;
        text-shadow: 0 0 20px rgba(94, 234, 212, 0.5);
    }

    .float-item:nth-child(1) {
        animation-delay: 0s;
        animation-duration: 7s;
    }
    .float-item:nth-child(2) {
        animation-delay: 1s;
        animation-duration: 8s;
    }
    .float-item:nth-child(3) {
        animation-delay: 2s;
        animation-duration: 6s;
    }
    .float-item:nth-child(4) {
        animation-delay: 0.5s;
        animation-duration: 9s;
    }
    .float-item:nth-child(5) {
        animation-delay: 1.5s;
        animation-duration: 7.5s;
    }
    .float-item:nth-child(6) {
        animation-delay: 2.5s;
        animation-duration: 8.5s;
    }

    @keyframes float {
        0%,
        100% {
            transform: translateY(0) rotate(0deg);
        }
        25% {
            transform: translateY(-20px) rotate(5deg);
        }
        50% {
            transform: translateY(-40px) rotate(-5deg);
        }
        75% {
            transform: translateY(-20px) rotate(3deg);
        }
    }

    /* Glitch Effect for 404 */
    .glitch {
        position: relative;
        animation: glitch-skew 1s infinite;
    }

    .glitch::before,
    .glitch::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .glitch::before {
        left: 2px;
        text-shadow: -2px 0 #ff00de;
        clip: rect(44px, 450px, 56px, 0);
        animation: glitch-anim 5s infinite linear alternate-reverse;
    }

    .glitch::after {
        left: -2px;
        text-shadow:
            -2px 0 #00fff9,
            2px 2px #ff00de;
        clip: rect(44px, 450px, 56px, 0);
        animation: glitch-anim2 5s infinite linear alternate-reverse;
    }

    @keyframes glitch-anim {
        0% {
            clip: rect(31px, 9999px, 94px, 0);
        }
        20% {
            clip: rect(70px, 9999px, 71px, 0);
        }
        40% {
            clip: rect(65px, 9999px, 29px, 0);
        }
        60% {
            clip: rect(48px, 9999px, 78px, 0);
        }
        80% {
            clip: rect(17px, 9999px, 100px, 0);
        }
        100% {
            clip: rect(55px, 9999px, 23px, 0);
        }
    }

    @keyframes glitch-anim2 {
        0% {
            clip: rect(65px, 9999px, 100px, 0);
        }
        20% {
            clip: rect(52px, 9999px, 74px, 0);
        }
        40% {
            clip: rect(79px, 9999px, 85px, 0);
        }
        60% {
            clip: rect(106px, 9999px, 60px, 0);
        }
        80% {
            clip: rect(82px, 9999px, 46px, 0);
        }
        100% {
            clip: rect(11px, 9999px, 62px, 0);
        }
    }

    @keyframes glitch-skew {
        0% {
            transform: skew(0deg);
        }
        10% {
            transform: skew(-2deg);
        }
        20% {
            transform: skew(2deg);
        }
        30% {
            transform: skew(0deg);
        }
        100% {
            transform: skew(0deg);
        }
    }

    /* Responsive adjustments */
    @media (max-width: 768px) {
        .float-item {
            font-size: 1.5rem;
        }
    }
</style>
