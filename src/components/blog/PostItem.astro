---
import type { Post } from "@/types";
import PostMeta from "./PostMeta.astro";
import PostCategories from "./PostCategories.astro";

interface Props {
    post: Post;
}

const { post } = Astro.props;
---

<article>
    <header>
        <h2 class="text-2xl font-bold leading-tight tracking-tighter">
            <a href={`/blog/${post.slug}`} aria-label={post.title.rendered}>
                {post.title.rendered}
            </a>
        </h2>
    </header>
    <div class="mt-2 line-clamp-3" set:html={post.content.rendered} />
    <footer class="mt-4">
        <PostMeta date={post.date} />
        <PostCategories categories={post.post_categories} />
    </footer>
</article>

<style is:inline>
    h2 {
        margin-bottom: 0.5rem;
    }
    p {
        margin-bottom: 1rem;
    }
</style>
